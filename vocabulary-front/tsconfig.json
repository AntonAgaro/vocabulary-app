{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "importsNotUsedAsValues": "remove",
    "isolatedModules": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
